{
  "extends": [":gitSignOff"],
  "labels": ["renovate:dependencies"],
  "timezone": "America/Los_Angeles",
  "commitMessagePrefix": "⬆",
  "commitMessageSuffix": "{{#if isLockfileUpdate}}🔒{{/if}}",
  "semanticCommits": "disabled",
  "rangeStrategy": "auto",
  "rebaseWhen": "behind-base-branch",
  "rollback": {
    "commitMessageAction": "Rollback",
    "commitMessagePrefix": "⏪"
  },
  "pin": {
    "commitMessageAction": "Pin",
    "commitMessagePrefix": "📌"
  },
  "vulnerabilityAlerts": {
    "addLabels": ["renovate:security"]
  },
  "github-actions": {
    "addLabels": ["renovate:actions"],
    "additionalBranchPrefix": "actions/",
    "commitMessageTopic": "👷 GitHub Action {{{depName}}}",
    "pin": {
      "groupName": "GitHub Actions",
      "group": {
        "commitMessageTopic": "👷 {{{groupName}}} Workflows"
      }
    },
    "pinDigests": true,
    "rangeStrategy": "pin"
  },
  "cargo": {
    "addLabels": ["renovate:rust"],
    "additionalBranchPrefix": "rust/",
    "commitMessageTopic": "🦀 Rust Crate {{{depName}}}"
  },
  "packageRules": [
    {
      "automerge": true,
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"]
    },
    {
      "groupName": "Review Dog Actions",
      "matchManagers": ["github-actions"],
      "matchPackagePrefixes": ["reviewdog/"]
    },
    {
      "groupName": "Common Actions",
      "matchManagers": ["github-actions"],
      "matchPackagePrefixes": ["actions/"]
    },
    {
      "groupName": "Rust Actions",
      "matchManagers": ["github-actions"],
      "matchPackagePrefixes": ["actions-rs/"]
    },
    {
      "groupName": "Setup Actions",
      "matchManagers": ["github-actions"],
      "matchPackagePatterns": ["^[^/]+[/]setup-.+$"]
    }
  ]
}
